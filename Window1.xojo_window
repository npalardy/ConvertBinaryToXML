		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  If IsDarkMode Then
		    g.forecolor = &cACFFF900
		  Else
		    g.forecolor = &c7F82FE00
		  End If
		  
		  g.drawrect 0,0,g.width,g.height
		  
		  
		End Sub
	#tag EndEvent
