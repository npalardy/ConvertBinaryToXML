#tag WindowCode
	#tag Event
		Sub DropObject(obj As DragItem, action As Integer)
		  
		  obj.MoveFirst
		  
		  Do 
		    
		    If obj.FolderItemAvailable Then
		      
		      Dim fItem As folderitem = obj.FolderItem
		      
		      If fitem Is Nil Then
		        Continue
		      End If
		      If fitem.Exists = False Then 
		        Continue
		      End If
		      If fitem.Directory = True Then
		        Continue
		      End If
		      If fItem.isRBBFFile = False Then
		        Continue
		      End If
		      
		      Dim dlog As New SaveAsDialog
		      dlog.ActionButtonCaption = "Save"
		      dlog.CancelButtonCaption = "Cancel"
		      dlog.Title = "Save Converted File As ..."
		      dlog.PromptText = "Select a destination for the converted file to be saved in"
		      dlog.SuggestedFileName = fitem.NameWithoutExtension + ".xojo_xml_project"
		      
		      Dim outfile As FolderItem = dlog.ShowModal
		      
		      If outfile <> Nil Then
		        Try
		          Dim outWriteable As Writeable = TextOutputStream.Create(outfile)
		          
		          Dim converter As New RBBFConversion.RBBFToXMLConverter
		          
		          If converter.ConvertFile(fItem, outWriteable) <> RBBFConversion.RBBFToXMLConverter.kSuccess Then
		            MsgBox "Conversion failed"
		          End If
		        Catch IOX As IOException
		          MsgBox "Conversion failed"
		        End Try
		      End If
		      
		    End If
		    
		  Loop Until obj.NextItem = False
		  
		End Sub
	#tag EndEvent

	#tag Event
		Sub Open()
		  Self.AcceptFileDrop(FileTypes1.Any)
		  
		End Sub
	#tag EndEvent


